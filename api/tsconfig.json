{
  "compilerOptions": {
    "target": "ES2017",      
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "types": ["node", "express"] 
  },
  "include": [
    "src/types/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "files": ["./src/types/express.d.ts"]
}
